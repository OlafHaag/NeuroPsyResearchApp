# screeninstructions.kv
#:kivy 1.11.1

<ScreenInstructCircleTask>:  # When adding new task instruction, to share style add class like so: <TaskOne, TaskTwo>:
    settings: app.settings
    on_leave: scroll.scroll_y = 1

    MDGridLayout:
        cols: 1
        padding: 10, 10
        spacing: 10

        ScrollView:
            id: scroll
            do_scroll_x: False
            do_scroll_y: True
            scroll_type: ['bars', 'content']

            MDGridLayout:
                cols: 1
                adaptive_height: True
                spacing: 10

                MDLabel:
                    text: root.title
                    font_style: 'H3'
                    size_hint_y: None

                MDLabel:
                    text: root.msg
                    markup: True
                    font_size: sp(24)
                    size: self.texture_size
                    size_hint_y: None
                    padding_x: 10
                    halign: 'justify'
                    valign: 'top'

                Image:
                    id: instruct_img
                    source: 'res/CT_1task_trial.png'
                    allow_stretch: False
                    keep_ratio: True
                    size: self.texture_size
                    size_hint: (1, None)

                MDLabel:
                    text: _("When you are ready to begin press [b]{}[/b].").format(_("Start"))
                    markup: True
                    font_size: sp(24)
                    size_hint_y: None
                    halign: 'center'

        MDSeparator:

        MDBoxLayout
            size_hint_y: None
            height: self.minimum_height

            Widget:  # Spacer
            MDRaisedButton:
                text: _("Start")
                font_size: 24
                halign: 'center'
                on_release:
                    root.manager.transition.direction = 'up'
                    root.manager.transition.duration = 0.5
                    root.manager.current = app.settings.current_task
            Widget:  # Spacer
