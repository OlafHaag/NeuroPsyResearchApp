# popups.kv
#:kivy 1.11.1

<ScrollText>
    orientation: 'vertical'
    size_hint_y: None

    ScrollView:
        id: scroll
        do_scroll_x: False
        do_scroll_y: True
        scroll_type: ['bars', 'content']

        MDLabel:
            id: label
            text: root.text
            markup: True
            halign: "justify"
            size_hint_y: None
            size: self.texture_size

<TextInputContent>
    orientation: "vertical"
    spacing: "12dp"
    padding: "10dp"
    description: _("Enter a new value.")
    input: ""
    #size_hint_y: None
    #height: "120dp"

    MDLabel:
        text: root.description
        font_style: 'Caption'

    MDTextField:
        id: textfield
        text: root.input
        icon_right: 'pencil'
        hint_text: _("New Value")
        helper_text: _("Error: invalid input")
        helper_text_mode: "on_error"
        pos_hint: {"center_y": .5}

# Dash (-) ist used to override TextInputContent's style rules.
<-UserInput>
    orientation: "vertical"
    padding: "10dp"

    MDLabel:
        text: _("This name is just for you. It won't be uploaded to the server.")
        font_style: 'Caption'

    MDTextField:
        id: textfield
        text: root.input
        required: True
        icon_right: 'pencil'
        hint_text: _("Enter Pseudonym")
        helper_text: _("Error: invalid value")
        helper_text_mode: "on_error"
        pos_hint: {"center_y": .5}
