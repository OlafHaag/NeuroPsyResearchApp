# popups.kv
#:kivy 1.11.1

#FixMe: How to handle garbage collection of Popups to avoid ReferenceError because of translations?
<SimplePopup>:
    id: pop
    size_hint: .6, .6
    auto_dismiss: False
    title: _("Information")
    BoxLayout:
        orientation: 'vertical'

        Label:
            id: pop_text
            text: root.msg
            text_size: root.width, None
            size: self.texture_size
            halign: 'center'
            valign: 'middle'
        RoundedButton:
            text: _("Close")
            size_hint_y: 0.3
            on_release: pop.dismiss()

<BlockingPopup>:
    id: pop_block
    size_hint: .6, .6
    auto_dismiss: False
    title: _("Information")
    BoxLayout:
        orientation: 'vertical'

        Label:
            id: pop_block_text
            text: root.msg
            text_size: root.width, None
            size: self.texture_size
            halign: 'center'
            valign: 'middle'
