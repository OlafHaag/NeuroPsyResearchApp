# screenconsents.kv
#:kivy 1.11.1

<ScreenConsentCircleTask>:  # When adding new consent forms, to share style add class like so: <ConsentOne, ConsentTwo>:
    on_leave: consent_scroll.scroll_y = 1

    MDGridLayout:
        cols: 1

        ScrollView:
            id: consent_scroll
            do_scroll_x: False
            do_scroll_y: True

            MDGridLayout:
                cols: 1
                adaptive_height: True
                padding: [0, 10, 0, 100]
                spacing: [0, 20]

                MDLabel:
                    text: root.consent_msg
                    markup: True
                    text_size: root.width, None
                    font_size: sp(24)
                    size: self.texture_size
                    size_hint_y: None
                    padding: 10, 10
                    halign: 'justify'
                    valign: 'top'
                MDLabel:
                    text: "[b]" + _("Personal Identifier:") + "[/b]"
                    markup: True
                    padding: 10, 10
                    text_size: root.width, None
                    font_size: sp(24)
                    size: self.texture_size
                    halign: 'center'
                    valign: 'middle'
                MDLabel:
                    text: app.settings.user_id
                    markup: False
                    text_size: root.width, None
                    font_size: sp(24)
                    size: self.texture_size
                    size_hint_y: None
                    padding: 10, 10
                    halign: 'center'
                    valign: 'bottom'

        MDSeparator:

        MDBoxLayout:
            spacing: 10
            padding: 10, 10
            size_hint_y: None
            height: self.minimum_height
            valign: 'middle'
            halign: 'right'
            Widget:  # Push buttons to the right.
            MDRectangleFlatButton:
                text: _("Decline")
                font_size: 24
                on_release:
                    root.manager.transition.direction = 'up'
                    root.manager.transition.duration = 0.5
                    root.manager.go_home()
            MDRaisedButton:
                text: _("Agree")
                font_size: 24
                on_release:
                    root.manager.transition.direction = 'up'
                    root.manager.transition.duration = 0.5
                    root.manager.current = root.manager.task_instructions[app.settings.current_task]
