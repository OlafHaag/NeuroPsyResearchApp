# popups.kv
#:kivy 1.11.1

<TextInputContent>
    orientation: "vertical"
    spacing: "12dp"
    padding: "10dp"
    description: _("Enter a new value.")
    input: ""

    MDLabel:
        text: root.description
        font_style: 'Caption'

    MDTextField:
        id: textfield
        text: root.input
        icon_right: 'pencil'
        hint_text: _("New Value")
        helper_text: _("Error: invalid input")
        helper_text_mode: "on_error"
        pos_hint: {"center_y": .5}

<DemographicsContent>
    orientation: 'vertical'
    spacing: "12dp"
    padding: "10dp"

    MDLabel:
        text: _("You can voluntarily give us demographic information about yourself.")
        font_style: 'Caption'

    MDBoxLayout:
        orientation: 'vertical'
        spacing: "18dp"

        MDBoxLayout:
            MDLabel:
                text: _("Age")
                shorten: True

            MDDropDownItem:
                id: age_dropdown
                on_release: root.age_menu.open()
                pos_hint: {"center_y": .5}

        MDBoxLayout:
            MDLabel:
                text: _("Gender")
                shorten: True

            MDDropDownItem:
                id: gender_dropdown
                on_release: root.gender_menu.open()
                pos_hint: {"center_y": .5}
