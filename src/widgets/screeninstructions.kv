# screeninstructions.kv
#:kivy 1.11.1

<InstructLabel>:
    markup: True
    size_hint_y: None
    height: self.texture_size[1]
    #font_size: sp(12)  # Doesn't work.
    #font_style: 'H6'  # Does work.
    halign: 'justify'
    valign: 'top'

<ScreenInstructCircleTask>:  # When adding new task instruction, to share style add class like so: <TaskOne, TaskTwo>:
    settings: app.settings
    on_leave: scroll.scroll_y = 1

    MDGridLayout:
        cols: 1
        padding: dp(10), dp(10)

        ScrollView:
            id: scroll
            do_scroll_x: False
            do_scroll_y: True
            scroll_type: ['bars', 'content']

            MDGridLayout:
                cols: 1
                adaptive_height: True
                padding: dp(10), 0

                MDLabel:
                    text: root.title
                    font_style: 'H5'
                    size_hint_y: None
                    height: self.texture_size[1]

                MDGridLayout:
                    id: instruct_text
                    cols: 1
                    spacing: dp(20)
                    size_hint_y: None
                    height: self.minimum_height

                Image:
                    id: instruct_img
                    source: 'res/CT_1task_trial.png'
                    allow_stretch: False
                    keep_ratio: True
                    size: self.texture_size
                    size_hint: (1, None)

                MDLabel:
                    text: _("When you are ready to begin press [b]{}[/b].").format(_("Start"))
                    markup: True
                    #font_size: sp(12)
                    size_hint_y: None
                    halign: 'center'

        MDSeparator:

        MDBoxLayout
            size_hint_y: None
            padding: dp(10), dp(5)
            height: self.minimum_height

            Widget:  # Spacer
            MDRaisedButton:
                text: _("Start")
                font_size: sp(12)
                halign: 'center'
                on_release:
                    root.manager.transition.direction = 'up'
                    root.manager.transition.duration = 0.5
                    root.manager.current = app.settings.current_task
            Widget:  # Spacer
