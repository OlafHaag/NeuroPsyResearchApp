# popups.kv
#:kivy 1.11.1

<TextInputContent>
    orientation: "vertical"
    spacing: dp(12)
    description: _("Enter a new value.")
    input: ""

    MDLabel:
        text: root.description
        font_style: 'Caption'

    MDTextField:
        id: textfield
        text: root.input
        icon_right: 'pencil'
        hint_text: _("New Value")
        helper_text: _("Error: invalid input")
        helper_text_mode: "on_error"
        pos_hint: {"center_y": .5}

<DemographicsContent>
    orientation: 'vertical'
    spacing: dp(12)

    MDLabel:
        text: _("You can voluntarily give us demographic information about yourself.")
        font_style: 'Caption'

    MDBoxLayout:
        orientation: 'vertical'
        spacing: dp(8)
        adaptive_height: True

        MDBoxLayout:
            adaptive_height: True
            MDLabel:
                text: _("Age")
                shorten: True

            MDDropDownItem:
                id: age_dropdown
                on_release: root.age_menu.open()
                pos_hint: {"center_y": .5}

        MDBoxLayout:
            adaptive_height: True
            MDLabel:
                text: _("Gender")
                shorten: True

            MDDropDownItem:
                id: gender_dropdown
                on_release: root.gender_menu.open()
                pos_hint: {"center_y": .5}

        MDBoxLayout:
            adaptive_height: True
            MDLabel:
                text: _("How often do you play two-handed video games on a touch device?")
            MDDropDownItem:
                id: exp_dropdown
                on_release: root.exp_menu.open()
                pos_hint: {"center_y": .5}
